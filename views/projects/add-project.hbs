<form action="/projects/add-project" method="POST" class="mt-3 mb-3">

  <label class="form-label" for="backend-input"> Backend Link: </label>
    <input
      id="backend-input"
      class="form-control"
      type="text"
      placeholder="Backend link to login"
      name="endPointsLink"
      required
    />

  <label class="form-label mt-1" for="frontend-input"> Frontend Link: </label>
  <input
    id="frontend-input"
    class="form-control"
    type="text"
    name="clientSideLink"
    placeholder="Frontend link"
  />

  <label class="form-label mt-1" for="login-input"> Login information (username/email): </label>
  <input
    id="login-input"
    class="form-control"
    type="text"
    name="activeUserName"
    placeholder="Valid login information"
    required
  />

  <label class="form-label mt-1" for="password-input"> Password: </label>
  <input
    id="password-input"
    class="form-control"
    type="password"
    name="activePassword"
    placeholder="Valid password"
    required
  />

  <button type="submit" class="btn btn-warning mt-3">Submit</button>
</form>

