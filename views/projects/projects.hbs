{{#if projects}}

	{{#each projects}}

		<div class='card mt-3'>

			<div class="card-body">

				<div class='card-title px-3 pt-2 d-flex justify-content-between align-items-center'>

					<p class='card-title'> {{projectName}} </p>

					{{#if (isOwner ../session.user._id owner._id) }}

						<form action="/projects/{{_id}}/delete" method="POST" class="d-flexjustify-content-between">

							<a href="/projects/{{_id}}/edit" class="btn btn-outline-warning"> Edit </a>
							
							<button type="submit" class="btn btn-danger"> Delete </button>

						</form>

					{{/if }}

				</div>

				<ul class='list-group'>

					<li class='list-group-item'>
						<p class='card-text'> Backend link: </p>
						<a class='card-link' href='{{endPointsLink}}' target='_blank'>{{this.endPointsLink}} </a>
					</li>

					{{!-- This needs to be decided if maintained of not --}}
					{{!-- {{#if this.clientSideLink}}

						<li class='list-group-item mt-1'>
							<p class='card-text'> Frontend link: </p>
							<a class='card-link' href='{{clientSideLink}}'>{{this.clientSideLink}}</a>
						</li>

					{{/if}} --}}

				</ul>

			</div>

		</div>

	{{/each}}

{{else}}

	<h1 class="text-center mt-3"> There is no project at the moment</h1>

{{/if}}