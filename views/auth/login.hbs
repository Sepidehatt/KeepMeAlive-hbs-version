<div class='d-flex justify-content-center'>


	<form
		class='d-flex flex-column w-50 mt-3 border border-primary px-3 py-3 rounded'
		action='/auth/login'
		method='POST'
	>

		{{#if errorMessage}}

			<div class="alert alert-danger" role="alert"> 
				{{errorMessage}} 
			</div>
			
		{{/if}}
		
		<label class='form-label'>
			Username:
			<input class='form-control' type='text' name='username' required/>
		</label>

		<label class='form-label'>
			Password:
			<input class='form-control' type='password' name='password' required/>
			<p class="form-text"> Your password needs to be at least 8 characters long.</p>
		</label>

		<div class='d-flex justify-content-center'>

			<button class='btn btn-primary mt-3 me-2 w-25' type='submit'> Login </button>
			
			<button class='btn btn-outline-danger mt-3' type='reset'> Cancel </button>
		
    </div>

	</form>

</div>